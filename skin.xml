	<extra_vars>
        <!--// <var name="title" type="text">
            <title xml:lang="ko">게시판 제목</title>
            <title xml:lang="en">Board Title</title>
			<description xml:lang="ko">작성하면 화면에 표시 됨</description>
			<description xml:lang="en">This will be displayed on the screen as you write.</description>
        </var>
        <var name="comment" type="textarea">
            <title xml:lang="ko">게시판 설명</title>
            <title xml:lang="en">Board Details</title>
			<description xml:lang="ko">작성하면 화면에 표시 됨</description>
			<description xml:lang="en">This will be displayed on the screen as you write.</description>
        </var> -->
		<var name="default_style" type="radio"> 
			<title xml:lang="ko">게시판 유형</title> 
			<title xml:lang="en">Board Style</title> 
			<options value="">
				<title xml:lang="ko">일반</title> 
				<title xml:lang="en">Normal</title> 
			</options>
			<options value="diary">
				<title xml:lang="ko">일기장</title> 
				<title xml:lang="en">Diary</title> 
			</options>
			<options value="memo">
				<title xml:lang="ko">일반 메모장</title> 
				<title xml:lang="en">Normal Memo</title> 
			</options>
			<options value="1line_memo">
				<title xml:lang="ko">한 줄 메모장</title> 
				<title xml:lang="en">One-line Memo</title> 
			</options>
			<options value="gallery">
				<title xml:lang="ko">갤러리</title> 
				<title xml:lang="en">Gallery</title> 
			</options>
			<options value="guestbook">
				<title xml:lang="ko">방명록</title> 
				<title xml:lang="en">Guestbook</title> 
			</options>
			<options value="link"> 
				<title xml:lang="ko">링크</title> 
				<title xml:lang="en">Link</title>
				<description xml:lang="ko">(확장변수 link_url, link_img 필요)</description>
				<description xml:lang="en">(required extra value link_url and link_img)</description>
			</options>
		</var>
		<var name="point_color" type="text">
            <title xml:lang="ko">포인트 색상</title>
            <title xml:lang="en">Point color</title>
			<description xml:lang="ko">예시 : #000000, black, rgba(0,0,0,0.5)</description>
			<description xml:lang="en">example : #000000, black, rgba(0,0,0,0.5)</description>
        </var>
		<var name="use_taglist" type="radio">
            <title xml:lang="ko">태그 목록 사용</title>
            <title xml:lang="en">Use tag list</title>
			<options value="yes">
				<title xml:lang="ko">예</title>
				<title xml:lang="en">yes</title>
			</options>
			<options value="">
				<title xml:lang="ko">아니오</title>
				<title xml:lang="en">no</title>
			</options>
        </var>
		<var name="hide_comment_writer" type="radio">
            <title xml:lang="ko">댓글 글쓴이 숨기기</title>
            <title xml:lang="en">Hide comment writer</title>
			<options value="yes">
				<title xml:lang="ko">예</title>
				<title xml:lang="en">yes</title>
			</options>
			<options value="">
				<title xml:lang="ko">아니오</title>
				<title xml:lang="en">no</title>
			</options>
        </var>
		<var name="gallery_thumbwidth" type="text">
            <title xml:lang="ko">갤러리 - 목록 썸네일 넓이(넓이와 높이를 같게 하는 것을 추천)</title>
            <title xml:lang="en">Gallery - list thumbnail width</title>
        </var>
		<var name="gallery_thumbheight" type="text">
            <title xml:lang="ko">갤러리 - 목록 썸네일 높이</title>
            <title xml:lang="en">Gallery - list thumbnail height</title>
        </var>
		<var name="no_title" type="radio">
            <title xml:lang="ko">메모, 일기장 - 제목 사용하지 않기</title>
            <title xml:lang="en">Memo, Diary - no title</title>
			<options value="yes">
				<title xml:lang="ko">예</title>
				<title xml:lang="en">yes</title>
			</options>
			<options value="">
				<title xml:lang="ko">아니오</title>
				<title xml:lang="en">no</title>
			</options>
        </var>
		<var name="hide_memo_writer" type="radio">
            <title xml:lang="ko">메모 - 글쓴이 숨기기</title>
            <title xml:lang="en">Hide memo writer</title>
			<options value="yes">
				<title xml:lang="ko">예</title>
				<title xml:lang="en">yes</title>
			</options>
			<options value="">
				<title xml:lang="ko">아니오</title>
				<title xml:lang="en">no</title>
			</options>
        </var>
		<var name="link_no_category" type="radio">
            <title xml:lang="ko">링크 - 카테고리 없는 링크 출력</title>
            <title xml:lang="en">Link - disply no category</title>
			<options value="">
				<title xml:lang="ko">예</title>
				<title xml:lang="en">yes</title>
			</options>
			<options value="no">
				<title xml:lang="ko">아니오</title>
				<title xml:lang="en">no</title>
			</options>
        </var>
    </extra_vars>
</skin>

