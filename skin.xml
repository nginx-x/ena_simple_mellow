<skin version="0.2">
    <title xml:lang="ko">이나 Simple Mellow 통합 스킨 모음</title>
    <title xml:lang="en">Ena Simple Mellow board skin collection</title>
    <description xml:lang="ko">개인 홈페이지에 맞는 여러 스타일의 스킨을 통합한 스킨입니다.</description>
    <description xml:lang="en">Simple board skin set for personal website.</description>
    <version>1.0.1</version>
    <date>2022-12-19</date>
    <author email_address="applemintr@gmail.com" link="http://starlight01.tistory.com/">
        <name xml:lang="ko">이나</name>
        <name xml:lang="en">Ena</name>
    </author>
    <author email_address="geunhong.kim@ghkim.net" link="https://ghkim.net">
        <name xml:lang="ko">김근홍</name>
        <name xml:lang="en">GeunHong Kim</name>
    </author>
